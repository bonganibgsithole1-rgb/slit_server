<div id="blogs_section" class="section">
  <h2 class="section_title">Get Updates</h2>

  <div class="subSection">
    <ul class="blogs_title_lists">
      <li><button id="all_docs" class="active_title">All</button></li>
      <li><button id="blogs_docs">Blogs</button></li>
      <li><button id="news_docs">News</button></li>
      <li><button id="resources_docs">Resources</button></li>
    </ul>
    <ul class="blogs_list_ul">
      <%nbs.forEach(function(nb){%>
      <!--  -->
      <li id="<%=nb._id%>">
        <a href="/blogsAndNews#<%=nb._id%>"></a>
        <% if(nb.nb_gallery_type === 'image'){%>
        <div class="image_container">
          <img src="<%=nb.nb_gallery_link%>" alt="" />
        </div>
        <%}else{%>
        <!--  -->
        <%if(nb.nb_gallery_type === 'video'){%>
        <div class="video_container">
          <iframe src="<%=nb.nb_gallery_link%>" frameborder="0"></iframe>
        </div>
        <%}%>
        <!--  -->
        <%}%>
        <div class="context_container">
          <h5><%=nb.nb_type%></h5>
          <h4><%=nb.nb_title%></h4>
          <p class="limittosix"><%-nb.nb_body%></p>

          <div class="view_more">
            <button>
              <span>Lean More</span>
              <svg viewBox="0 0 32 32">
                <defs>
                  <style>
                    .cls-1 {
                      fill: none;
                    }
                  </style>
                </defs>
                <title></title>
                <g data-name="Layer 2" id="Layer_2">
                  <path
                    d="M12,25a1,1,0,0,1-.71-.29,1,1,0,0,1,0-1.42L18.59,16l-7.3-7.29a1,1,0,1,1,1.42-1.42l8,8a1,1,0,0,1,0,1.42l-8,8A1,1,0,0,1,12,25Z"
                  ></path>
                </g>
                <g id="frame">
                  <rect class="cls-1" height="32" width="32"></rect>
                </g>
              </svg>
            </button>
          </div>
        </div>
      </li>
      <%})%>
    </ul>
    <div class="blogs_navigation">
      <span class="blogs_navigators left_navigator">
        <svg viewBox="0 0 24 24">
          <path
            d="M10.6,12.71a1,1,0,0,1,0-1.42l4.59-4.58a1,1,0,0,0,0-1.42,1,1,0,0,0-1.41,0L9.19,9.88a3,3,0,0,0,0,4.24l4.59,4.59a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.42Z"
          ></path>
        </svg>
      </span>
      <div class="selection_container">
        <button class="selection_btn focused_selection" id="first_phase">
          <span> </span>
        </button>
        <%if(all_nbs.length > 3){%>
        <button class="selection_btn" id="second_phase"></button>
        <%}%>
      </div>
      <span class="blogs_navigators right_navigator">
        <svg viewBox="0 0 24 24">
          <path
            d="M15.4,9.88,10.81,5.29a1,1,0,0,0-1.41,0,1,1,0,0,0,0,1.42L14,11.29a1,1,0,0,1,0,1.42L9.4,17.29a1,1,0,0,0,1.41,1.42l4.59-4.59A3,3,0,0,0,15.4,9.88Z"
          ></path>
        </svg>
      </span>
    </div>
  </div>
</div>
