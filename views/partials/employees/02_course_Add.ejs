<div class="horizontalNav tabsLists">
  <span class="pageChoosen"><a href="/employees/courses">Courses List</a></span>
  <span class="pageChoosen"><a href="/employees/home">Employees Home</a></span>
</div>
<div class="section" id="addCourseSection">
  <div class="subSection">
    <h3>Add new course</h3>
    <ul class="subSectionCourseLists">
      <form action="/employees/courses/addCourse" method="post">
        <div class="textAreaSection">
          <input
            type="number"
            name="course_number"
            placeholder="Course number"
            required
          />
          <input
            type="text"
            name="course_title"
            placeholder="Course description"
            required
          />
          <textarea
            name="course_body"
            id="course_body"
            placeholder="Course explanation"
            required
          ></textarea>
        </div>
        <button class="submit_btn">New Course</button>
      </form>
    </ul>
  </div>
</div>
