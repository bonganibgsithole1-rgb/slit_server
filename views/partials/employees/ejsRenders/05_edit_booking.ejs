<div class="book_enterpretor_div">
  <div class="input_container">
    <label for="company_name">Company name</label>
    <input
      type="text"
      id="company_name"
      name="company_name"
      value="<%=booking.booking_company_name%>"
      disabled
    />
  </div>
  <div class="input_container">
    <label for="contact_number">Contact number</label>
    <input
      type="number"
      id="contact_number"
      name="contact_number"
      value="<%=booking.booking_contact_number%>"
      disabled
    />
  </div>
  <div class="input_container">
    <label for="email_address">Email Address</label>
    <input
      type="email"
      id="email_address"
      name="email_address"
      value="<%=booking.booking_email_address%>"
      disabled
    />
  </div>
  <div class="input_container">
    <label for="request_date">Request date</label>
    <input
      type="date"
      id="request_date"
      name="request_date"
      value="<%=booking.booking_request_date%>"
      disabled
    />
  </div>
  <div class="input_container">
    <label for="request_time">Request time</label>
    <input
      type="time"
      id="request_time"
      disabled
      name="request_time"
      value="<%=booking.booking_request_time%>"
    />
  </div>
  <div class="input_container">
    <label for="language_to_use">Language to be used</label>
    <input
      type="text"
      id="request_language"
      name="request_language"
      value="<%=~~booking.booking_language_to_use === 4 ? booking.booking_other_language : language_lists[~~booking.booking_language_to_use+1]%>"
    />
  </div>
  <div class="input_container">
    <label for="interpretation_type">Type of request</label>
    <input
      type="text"
      id="type_of_request"
      name="type_of_request"
      value="<%=booking_interpretations[~~booking.booking_interpretation_type+1]%>"
    />
  </div>
  <form method="POST" id="booking_summary_form" class="<%=booking._id%>">
    <div class="text_area_container">
      <h5>Summary</h5>
      <textarea name="booking_summary" id="booking_summary" required>
       <%=booking.booking_summary%>
      </textarea>

      <%if(booking.booking_status === 'Pending'){%>
      <button id="book_interpreter_btn">
        <span>Submit Summary</span>
        <svg style="enable-background: new 0 0 24 24" viewBox="0 0 24 24">
          <g id="info"></g>
          <g id="icons">
            <path
              d="M21.5,11.1l-17.9-9C2.7,1.7,1.7,2.5,2.1,3.4l2.5,6.7L16,12L4.6,13.9l-2.5,6.7c-0.3,0.9,0.6,1.7,1.5,1.2l17.9-9   C22.2,12.5,22.2,11.5,21.5,11.1z"
              id="send"
            ></path>
          </g>
        </svg>
      </button>
      <%}%>
    </div>
  </form>
</div>
